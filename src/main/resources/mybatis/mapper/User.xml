<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.recursion123.model.User">
    <select id="listUser" resultType="com.recursion123.model.User">
        select * from user_tbl
        <where>
            <if test="name != null">
                name = #{name}
            </if>
        </where>
    </select>
    <insert id="insertUser">
        insert into user_tbl values ( #{name},#{password},#{role})
    </insert>
    <delete id="deleteUser">
        <if test="name != null">
             DELETE from user_tbl WHERE name = #{name}
        </if>
    </delete>
    <update id="updateUser">

    </update>
    <select id="findUser" resultType="int">
        <if test="name != null">
            select count(*) from user_tbl where name = #{name} and password=#{password}
        </if>
    </select>
    <select id="findUserByName"  resultType="com.recursion123.model.User">
            select * from user_tbl where name = #{userName}
    </select>
</mapper>