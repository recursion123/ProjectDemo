<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.recursion123.model.User">
    <resultMap id="User" type="com.recursion123.model.User">
        <id property="id" column="user_id"/>
        <result property="name" column="user_name"/>
        <result property="password" column="user_password"/>
        <collection property="role" ofType="com.recursion123.model.Role" resultMap="Role" columnPrefix="role_"/>
    </resultMap>

    <resultMap id="Role" type="com.recursion123.model.Role">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>

    <select id="listUser" resultMap="User">
        SELECT
        ut.id user_id,
        ut.name user_name,
        ut.password user_password,
        urm.role_id role_id,
        rt.name role_name
        FROM user_tbl ut LEFT JOIN user_role_map urm ON urm.user_id = ut.id
        LEFT JOIN role_tbl rt ON urm.role_id = rt.id
        <where>
            <if test="name != null">ut.name=#{name}</if>
        </where>
    </select>

    <insert id="insertUser" useGeneratedKeys="true" keyProperty="id">
        <!--<selectKey order="AFTER" keyProperty="id" resultType="java.lang.Integer">-->
            <!--SELECT currval('user_tbl_id_seq')-->
        <!--</selectKey>-->
        insert into user_tbl(name,password) values (#{name},#{password})
    </insert>

    <insert id="insertRole">
        INSERT INTO role_tbl (name) VALUES (#{name})
    </insert>

    <insert id="insertUserRoleMap" useGeneratedKeys="true">
        insert into user_role_map(user_id,role_id) values
        <foreach item="Role" collection="role" separator=",">
            (#{id},#{Role.id})
        </foreach>
    </insert>

    <delete id="deleteUserRoleMap">
        DELETE FROM user_role_map
        WHERE user_id = #{id}
    </delete>

    <delete id="deleteUser">
        <if test="name != null">
            DELETE from user_tbl t WHERE name= #{name}
        </if>
    </delete>

    <update id="updateUser">
        UPDATE user_tbl
        SET password = #{password}
        WHERE id = #{id}
    </update>

    <update id="updateRole">
        UPDATE role_tbl
        SET name = #{name}
        WHERE id = #{id}
    </update>

    <select id="listRole" resultMap="Role">
        select *
        FROM role_tbl
        <where>
            <if test="id!=null">
                id=#{id}
            </if>
            <if test="name!=null">
                and name=#{name}
            </if>
        </where>
    </select>

    <select id="findUser" resultType="int">
        <if test="name != null">
            select count(*) from user_tbl where name = #{name} and password=#{password}
        </if>
    </select>

</mapper>